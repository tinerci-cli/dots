#!/bin/sh
#common commands
alias \
	c="clear" \
	aus="doas shutdown -P now" \
	re="doas shutdown -r now" \
	rmr="rm -Ivr" \
	ll="ls -lAhN --color=auto --group-directories-first" \
	la="ls -AhN --color=auto --group-directories-first" \
	sx="startx ~/.config/x11/xinitrc" \
	xfce="startxfce4" \
	mkd="mkdir -pv" \
	dmci="doas make clean install" \
	cp="cp -ivr" \
	ls="ls -hN --color=auto --group-directories-first" \
	rm="rm -Iv" \
	mv="mv -iv"

#common programs
alias \
	v="nvim" \
	z="zathura" \
	m="mpv" \
	s="nsxiv" \

