	gcm="git commit" \
	gcl="git clone" \
	gco="git checkout" \
	gd="git diff" \
	gf="git fetch" \
	gg="git gui citool" \
	gps="git push" \
	gpl="git pull" \
	gm="git merge" \
	gr="git remote" \
	grb="git rebase" \
	grs="git reset" \
	grv="git revert"

